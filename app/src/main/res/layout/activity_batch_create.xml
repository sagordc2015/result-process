<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/iit_background"
    tools:context=".BatchCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/iit_logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Course : "
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:background="@color/white"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/type"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Batch Code"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:background="@color/white"
            android:gravity="center"
            />

        <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:hint="Batch Number"
            android:inputType="number"
            android:background="@color/white"
            android:maxLength="4"
            android:textColorHint="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Batch Name"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:background="@color/white"
            android:gravity="center"
            />

        <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:hint="Batch Name"
            android:inputType="text"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Batch Year"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:background="@color/white"
            android:gravity="center"
            />

        <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:hint="Batch Year"
            android:inputType="numberDecimal"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/registrationSubmit"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="submit"/>

    </LinearLayout>

</LinearLayout>