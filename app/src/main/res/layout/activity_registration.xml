<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/iit_background"
    android:scrollbars="vertical"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/iit_logo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/fullNameLavel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Full Name : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/fullName"
                    android:inputType="text"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:hint="Enter full name"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/emailLavel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Email : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:hint="Enter email"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/identityLevel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="ID : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/identity"
                    android:inputType="number"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:hint="Enter ID"
                    android:textSize="18dp"
                    android:maxLength="4"
                    android:textColorHint="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/genderLavel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Gender : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <RadioGroup
                    android:id="@+id/genderGroup"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"/>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/mobileLavel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Mobile : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/mobile"
                    android:inputType="number"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:hint="Enter mobile number"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/mobileLavel"
                    android:layout_toRightOf="@+id/mobileLavel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/typeLavel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Type : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <Spinner
                    android:id="@+id/type"
                    android:inputType="number"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:hint="Enter mobile number"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/typeLavel"
                    android:layout_toRightOf="@+id/typeLavel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/designationOrCourseLavel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Course : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <Spinner
                    android:id="@+id/designationOrCourseName"
                    android:inputType="number"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:hint="Enter mobile number"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/designationOrCourseLavel"
                    android:layout_toRightOf="@+id/designationOrCourseLavel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/upload_image"
                    android:layout_width="196dp"
                    android:layout_height="196dp"
                    android:background="#C4E4DD"
                    android:src="@drawable/user_profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/passwordLavel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Password : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:gravity="center"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:hint="Enter Password"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:minLines="6"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/confirmPasswordLavel"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Confirm : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/confirmPassword"
                    android:inputType="textPassword"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:hint="Enter Confirm Password"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:background="@color/white"

                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/registrationSubmit"
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="submit"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/goLogin"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:background="@color/aqua"
                    android:text="Login"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>




</LinearLayout>