<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowResultActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aqua"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:textColor="@color/blue"
            android:text="Full Name"/>

        <TextView
            android:id="@+id/resultFullName"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="5dp"
            android:text="ID"/>

        <TextView
            android:id="@+id/resultIdentity"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/aqua"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:textColor="@color/blue"
            android:text="Email"/>

        <TextView
            android:id="@+id/resultEmail"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="5dp"
            android:text="Gender"/>

        <TextView
            android:id="@+id/resultGender"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/aqua"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:textColor="@color/blue"
            android:text="Mobile"/>

        <TextView
            android:id="@+id/resultMobile"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="5dp"
            android:text="Course"/>

        <TextView
            android:id="@+id/resultCourse"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#0CE86F"
        android:orientation="horizontal">

        <TextView
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:textColor="@color/blue"
            android:text="CGPA"/>

        <TextView
            android:id="@+id/resultCGPA"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="5dp"
            android:text="Grade"/>

        <TextView
            android:id="@+id/resultGrade"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/resultRemarks"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="1st Semester"
                    android:background="@color/white"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <HorizontalScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Subject"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Attend"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Assign"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Present"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Mid"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Final"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Total"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="CGPA"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Grade"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:padding="10dip"
                            android:textSize="16dip"
                            android:textStyle="bold"
                            android:text="Remarks"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>


            <ListView
                android:id="@+id/listView1st"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="2nd Semester"
                    android:background="@color/white"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <HorizontalScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Subject"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Attend"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Assign"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Present"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Mid"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Final"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Total"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="CGPA"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Grade"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Remarks"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </HorizontalScrollView>

            <ListView
                android:id="@+id/listView2nd"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="3rd Semester"
                    android:background="@color/white"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <HorizontalScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Subject"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Attend"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Assign"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Present"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Mid"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Final"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Total"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="CGPA"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Grade"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="16dip"
                        android:textStyle="bold"
                        android:text="Remarks"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </HorizontalScrollView>

            <ListView
                android:id="@+id/listView3rd"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>