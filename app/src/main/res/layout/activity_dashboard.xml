<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewInputResult"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="@color/black"
                android:layout_marginTop="5dp"
                card_view:cardElevation="20dp"
                card_view:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageCardViewInputResult"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/iit_logo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:linksClickable="true"
                        android:text="Result Input"
                        android:textColor="#fff"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBatch"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="@color/red"
                android:layout_marginTop="15dp"
                card_view:cardElevation="20dp"
                card_view:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageCardViewBatch"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/iit_logo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:linksClickable="true"
                        android:text="Batch Setup"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewTeacher"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="#Ff44ff"
                card_view:cardElevation="20dp"
                card_view:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageCardViewTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/iit_logo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:linksClickable="true"
                        android:text="Teacher Setup"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewShowResult"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="@color/blue"
                android:layout_marginTop="15dp"
                card_view:cardElevation="20dp"
                card_view:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageCardViewShowResult"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/iit_logo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:linksClickable="true"
                        android:text="Show Result"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewShowAllResult"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="@color/blue"
                android:layout_marginTop="15dp"
                card_view:cardElevation="20dp"
                card_view:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageCardViewShowAllResult"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/iit_logo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:linksClickable="true"
                        android:text="Show All Result"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>