<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/iit_background"
    tools:context=".TeacherSetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/iit_logo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Teacher ID : "
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            />

        <Spinner
            android:id="@+id/spinnerTeacherId"
            android:inputType="number"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:hint="Batch Code"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Teacher Name : "
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/showTeacherName"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:text="Teacher Name"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Designation : "
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/showDesignation"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:text="Designation"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Batch Code : "
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            />

        <Spinner
            android:id="@+id/spinnerBatchCode"
            android:inputType="number"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:hint="Batch Code"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Course Name : "
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="20dp"
            />

        <Spinner
            android:id="@+id/spinnerCourseName"
            android:inputType="number"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:hint="Course Name"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Subject Code : "
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            />

        <Spinner
            android:id="@+id/spinnerSubjectCode"
            android:inputType="number"
            android:layout_width="195dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:hint="Subject Code"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/submitTeacherSetup"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="submit"/>

    </LinearLayout>
</LinearLayout>