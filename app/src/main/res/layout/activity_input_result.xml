<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/iit_background"
    tools:context=".InputResultActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/iit_logo"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <EditText
                        android:id="@+id/studentid"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:hint="Enter id"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:background="@color/white"
                        />
                    <Button
                        android:id="@+id/btnPress"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:text="press"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="Full Name"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <TextView
                        android:id="@+id/showFullName"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="Email"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <TextView
                        android:id="@+id/showEmail"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="Mobile"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <TextView
                        android:id="@+id/showMobile"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="Gender"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <TextView
                        android:id="@+id/showGender"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="Course"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <TextView
                        android:id="@+id/showCourse"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="SubjectCode"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <TextView
                        android:id="@+id/showSubjectCode"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:text="Semester"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <TextView
                        android:id="@+id/showSemester"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:text="Attendance"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <EditText
                        android:id="@+id/showAttendance"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:hint="5%"
                        android:gravity="center"
                        android:maxLength="1"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:text="Assignment"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:background="@color/white"
                    />
                    <EditText
                        android:id="@+id/showAssignment"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:hint="10%"
                        android:gravity="center"
                        android:maxLength="2"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:text="Presentation"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <EditText
                        android:id="@+id/showPresentation"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:hint="5%"
                        android:gravity="center"
                        android:maxLength="1"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:text="Mid-Term"
                        android:gravity="center"
                        android:background="@color/white"
                    />
                    <EditText
                        android:id="@+id/showMidterm"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:hint="20%"
                        android:maxLength="2"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:text="Final"
                        android:gravity="center"
                        android:background="@color/white"
                        />
                    <EditText
                        android:id="@+id/showFinal"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:hint="Total marks 60%"
                        android:maxLength="2"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <Button
                        android:id="@+id/submitBtn"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:text="submit" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>