<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/iit_background"
    tools:context=".EditProfileActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/iit_logo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Full Name : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/editFullName"
                    android:inputType="text"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:hint="Enter full name"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Email : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/editEmail"
                    android:inputType="textEmailAddress"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:hint="Enter email"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Gender : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/editGender"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:textSize="18dp"
                    android:hint="Gender"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Mobile : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/editMobile"
                    android:inputType="number"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:hint="Enter mobile number"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:maxLength="11"
                    android:layout_toEndOf="@+id/mobileLavel"
                    android:layout_toRightOf="@+id/mobileLavel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Type : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/editType"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Batch : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/editBatchCode"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:text="ID : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/editIdentity"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:hint="Enter ID"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Course : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/editDesignationOrCourseName"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/edit_upload_image"
                    android:layout_width="196dp"
                    android:layout_height="196dp"
                    android:background="#C4E4DD"
                    android:src="@drawable/user_profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Password : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/editPassword"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:hint="Enter Password"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:minLines="6"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Confirm : "
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:background="@color/white"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/editConfirmPassword"
                    android:inputType="textPassword"
                    android:layout_width="225dp"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:hint="Enter Confirm Password"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:background="@color/white"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <Button
                    android:id="@+id/profileUpdateBtn"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="update"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>